{
  "name": "ecr-viewer",
  "description": "The DIBBs eCR Viewer app offers a REST API for processing FHIR messages into an HTML page with key insights.",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "local-dev": "npm run setup-local-env && docker compose up db seed-db -d && docker-compose logs && export DATABASE_URL=postgres://postgres:pw@localhost:5432/ecr_viewer_db && npm run dev",
    "setup-local-env": "./setup-env.sh",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "TZ=America/New_York jest",
    "test:unit:watch": "TZ=America/New_York jest --watch",
    "test:integration": "mocha --timeout 600000 tests/integration/test_ecr-viewer.js",
    "convert-seed-data": "sh ./seed-scripts/convert.sh",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "@testing-library/user-event": "^14.5.2",
    "@trussworks/react-uswds": "^6.1.0",
    "@types/sinonjs__fake-timers": "^8.1.1",
    "@uswds/uswds": "3.7.0",
    "axios": "^1.6.0",
    "classnames": "^2.5.1",
    "date-fns": "^3.4.0",
    "fhirpath": "^3.10.4",
    "html-react-parser": "^5.1.4",
    "jose": "5.2.2",
    "js-yaml": "4.1.0",
    "next": "14.0.3",
    "pg-promise": "^11.5.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.0.4",
    "@smithy/util-stream": "^2.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/fhir": "^0.0.40",
    "@types/jest-axe": "^3.5.9",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autoprefixer": "^10.0.1",
    "aws-sdk-client-mock": "^3.0.1",
    "chai": "^4.3.10",
    "cypress": "^13.6.6",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "mocha": "^10.2.0",
    "postcss": "^8",
    "prettier": "3.1.1",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.0",
    "testcontainers": "^10.3.2",
    "typescript": "^5"
  }
}
