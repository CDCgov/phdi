{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/cypress/types/cypress.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./cypress.config.ts",
    "cypress",
    "**/*.cy.tsx"
  ]
}
